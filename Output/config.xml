<!-- Config file for the game -->

<config>
 <app framerate_cap="60">
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
    <savefile path="save.xml"/>
  </app>

  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="1280" height="694" scale="2"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <player>
    <texture>Assets/textures/FinnSprite.png</texture>
    <move gravity="1800" jumpForceValue="10" speed="150.0f" maxJumps="2"/>
    <audio jump="Assets/audio/fx/Jump.wav" />
  </player>

  <enemy>
    <texture>Assets/textures/Warrior.png</texture>
    <move gravity="1800" jumpForceValue="2.0f" speed="-2.0f" health="20.0f"/>
    <audio jump="Assets/audio/fx/Jump.wav" />
  </enemy>

  <scene>
    <music path="Assets/audio/music/music_spy.ogg"/>
  </scene>

  <!-- L03: Added maps folder as config option -->
  <map>
    <folder>Assets/maps/</folder>
  </map>

  
</config>